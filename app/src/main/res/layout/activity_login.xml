<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/ivImageLogo"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:src="?android:attr/alertDialogIcon" />

    <TextView
        android:id="@+id/tvlogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:layout_gravity="center_horizontal"
        android:text="ALETMAYITI"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Imel oubyen nimewo telefòn ou"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/etUserName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
         />

    <TextView
        android:id="@+id/tvPaskordKonek"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kòd sekrè"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/etPaskordKonek"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:inputType="textPassword"/>

    <Button
        android:id="@+id/btnKonekte"
        android:layout_width="250dp"
        android:layout_height="37dp"
        android:layout_marginBottom="35dp"
        android:layout_marginLeft="60dp"
        android:background="@android:color/holo_blue_light"
        android:text="KONEKTE"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        android:textStyle="bold"
        android:onClick="btnKonekte"
        />

    <TextView
        android:id="@+id/tvforget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="Klike la si'w bliye Kòd ou"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tvRegisterLink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kyere yon kont"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"/>


</LinearLayout>