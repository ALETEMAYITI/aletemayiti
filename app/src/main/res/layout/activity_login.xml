<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/ivImageLogo"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginLeft="142dp"
        android:layout_marginTop="50dp"
        android:src="?android:attr/alertDialogIcon" />

    <TextView
        android:id="@+id/tvNom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="138dp"
        android:text="ALETMAYITI"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:text="Imel oubyen nimewo telefòn ou"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/etUserName"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="30dp" />

    <TextView
        android:id="@+id/tvPassWord"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:text="Kòd sekrè"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/etPassWord"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="30dp"
        android:inputType="textPassword"/>

    <Button
        android:id="@+id/btnKonekte"
        android:layout_width="250dp"
        android:layout_height="37dp"
        android:layout_marginBottom="35dp"
        android:layout_marginLeft="60dp"
        android:background="@android:color/holo_blue_light"
        android:text="KONEKTE"
        android:textColor="@android:color/background_light"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tvforget"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:layout_marginLeft="30dp"
        android:text="Klike la si'w bliye Kòd ou"
        android:textAlignment="center"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tvRegister"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:text="Kyere yon kont"
        android:textAlignment="center"
        android:textSize="18sp" />


</LinearLayout>